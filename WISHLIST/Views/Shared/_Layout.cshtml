@using WISHLIST.Repositories.Abstract
@inject IUserService _userService
<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WISHLIST</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WISHLIST.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/097a8526d1.js" crossorigin="anonymous"></script>
</head>
<body>
    

    <main>
        <input type="checkbox" id="check">
        <label for="check">
            <i class="fas fa-bars" id="btn"></i>
            <i class="fas fa-times" id="cancel"></i>
        </label>
        <div class="sidebar">
            <h1>MENU</h1>
            <ul>
                <li><a href="/User/Dashboard?username=@User.Identity.Name"><i class="fas fa-qrcode"></i>Dashboard</a></li>
                <li><a href="/User/UserInfoChange?username=@User.Identity.Name"><i class="fa-solid fa-pen-to-square"></i>Change personal info</a></li>
                <li style="display: flex; justify-content: space-between; align-items: center;"><a href="/User/Requests"><i class="fas fa-stream"></i>Requests<div class="count">@(await _userService.GetAllRequestsByUser2Count(User.Identity.Name))</div></a></li>
                <li><a href="/User/FindUser?request=@null"><i class="fa-solid fa-user-group"></i>Make friends</a></li>
                <li><a href="/UserAuthentication/Logout"><i class="fa-solid fa-arrow-right-from-bracket"></i>Log out</a></li>
                <li><a href="/UserAuthentication/ChangePassword"><i class="fa-solid fa-unlock"></i>Change password</a></li>
                <li><a href="/Wishlist/GlobalWishlistPage?request=@null"><i class="fas fa-sliders-h"></i>Wish Lists</a></li>
                <li><a href="#"><i class="far fa-envelope"></i>Contact</a></li>
            </ul>
        </div>
        <header>
            <h1>WISHLIST</h1>
        </header>
        @RenderBody()
    </main>
    


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
